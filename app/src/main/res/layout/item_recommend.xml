<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/tv_rec_covertitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="10pt"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:id="@+id/iv_rec_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_marginBottom="3dp">
        <ImageView
            android:id="@+id/iv_rec_head"
            android:paddingLeft="5dp"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_rec_title"
            android:layout_toRightOf="@+id/iv_rec_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="43px" />

        <TextView
            android:id="@+id/tv_rec_des"
            android:layout_toRightOf="@+id/iv_rec_head"
            android:layout_below="@+id/tv_rec_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorDarkGray"
            android:textSize="38px" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/iv_rec_image2"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iv_rec_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_rec_image2"
            android:layout_marginLeft="5dp"
            android:paddingTop="20dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/iv_rec_des2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_rec_title2"
            android:layout_toRightOf="@+id/iv_rec_image2"
            android:layout_marginLeft="5dp"
            android:paddingTop="20dp"
            android:textColor="@color/colorDarkGray"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/iv_rec_image3"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iv_rec_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_rec_image3"
            android:layout_marginLeft="5dp"
            android:paddingTop="20dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/iv_rec_des3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_rec_title3"
            android:layout_toRightOf="@+id/iv_rec_image3"
            android:layout_marginLeft="5dp"
            android:paddingTop="15dp"
            android:textColor="@color/colorDarkGray"/>
    </RelativeLayout>
    <include layout="@layout/item_splitline"/>
    <TextView
        android:id="@+id/tv_rec_more"
        android:text="查看更多推荐 >"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="8pt"
        android:textColor="@color/colorLakeBlue"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>