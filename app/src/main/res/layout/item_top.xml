<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:clipChildren="false">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clipChildren="false"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:id="@+id/item_top_rl"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_top_head"
            android:paddingTop="4dp"
            android:paddingLeft="5dp"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"/>

        <com.rabbit.kaiyan.widget.JumpShowTextView
            android:id="@+id/tv_top_title"
            android:layout_toRightOf="@+id/iv_top_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            app:textColor="@color/colorBlack"
            app:textSize="43px" />

        <com.rabbit.kaiyan.widget.JumpShowTextView
            android:id="@+id/tv_top_des"
            android:layout_toRightOf="@+id/iv_top_head"
            android:layout_below="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            app:textColor="@color/colorBlack"
            app:textSize="38px" />
    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="@color/colorLightGray"/>


</LinearLayout>